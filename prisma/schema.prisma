datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  status    Status   @default(PROSPECTO)
  createdAt DateTime @default(now())
  histories StatusHistory[] @relation("ContactStatusHistory")
}

model StatusHistory {
  id        Int      @id @default(autoincrement())
  contactId Int
  oldStatus Status
  newStatus Status
  changedAt DateTime @default(now())

  contact   Contact  @relation("ContactStatusHistory", fields: [contactId], references: [id])
}


enum Status {
  PROSPECTO
  ACTIVO
  INACTIVO
}
